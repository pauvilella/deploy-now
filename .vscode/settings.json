    "statusBar.background": "#5c549d",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#7871b3",
    "statusBarItem.remoteBackground": "#5c549d",
    "statusBarItem.remoteForeground": "#e7e7e7",
